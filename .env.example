# --- DATABASE ---
MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# --- SECURITY ---
# A special PIN that bypasses device locking (default: 7777)
MASTER_PIN=7777

# A password for the /admin dashboard (use in Bearer token or login)
# Default if not set: admin123
ADMIN_PASSWORD=your_secure_admin_password

# --- JWT AUTHENTICATION ---
# Secret key for signing JWT tokens (change in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
# Token expiration time (e.g., 7d, 24h, 60m)
JWT_EXPIRES_IN=7d

# --- APP SETTINGS ---
PORT=3000
NODE_ENV=production
